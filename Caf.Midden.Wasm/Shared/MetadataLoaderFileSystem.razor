<div class="file-input-zone">
    <InputFile id="inputFileMetadata"
               OnChange="OnInputFileMetadataChange"
               accept="application/json,.midden" />
    @if (isLoading)
    {
        <span><Icon Type="loading" /> Uploading..</span>
    }
    else
    {
        <span><Icon Type="upload" /> Upload</span>
    }
</div>

