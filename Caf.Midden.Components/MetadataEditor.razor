@using Microsoft.AspNetCore.Components.Forms

<h3>MetadataEditor</h3>
<pre>@LastUpdated</pre>

@if (Metadata != null)
{
    <p>@Metadata.CreationDate</p>

    @if (Metadata.Dataset?.Zone != null)
    {
        <p>@Metadata.Dataset.Zone</p>
    }

    <EditForm EditContext="@EditContext">
        <CascadingValue Value="@Metadata">
            <InputText @bind-Value="@Metadata.Dataset.Zone" />
        </CascadingValue>
    </EditForm>

}
else
{
    <p>Not loaded</p>
}

<button class="btn btn-primary" @onclick="LoadMetadataFile">Load</button>