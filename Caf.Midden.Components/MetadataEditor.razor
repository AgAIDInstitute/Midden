@inject Common.IUpdateMetadata State
@implements IDisposable

@using Microsoft.AspNetCore.Components.Forms

<h3>MetadataEditor</h3>

@if (State.Metadata != null)
{
    <p>@State.Metadata.CreationDate</p>
    <p>@State.Metadata.Dataset.Zone</p>
    <EditForm Model="@State.Metadata">
        <CascadingValue Value="@State.Metadata">
            <InputText @bind-Value="@State.Metadata.Dataset.Zone" />
        </CascadingValue>
    </EditForm>
    
}
else
{
    <p>Not loaded</p>
}

<button class="btn btn-primary" @onclick="LoadMetadataFile">Load</button>